<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/progressBarTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/progressBarTitle" />
    
    <ProgressBar 
        android:id="@+id/progressBarHorizontal"
        android:layout_below="@id/progressBarTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="50"
        android:visibility="gone"/>
    
    <ProgressBar 
        android:id="@+id/progressBar"
        android:layout_below="@id/progressBarHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyle"
        android:visibility="gone"/>
    
    <Button 
        android:id="@+id/progressBarButton"
        android:layout_below="@id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <Button 
        android:id="@+id/listViewButton"
        android:layout_below="@id/progressBar"
        android:layout_toRightOf="@id/progressBarButton"
        android:paddingLeft="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
